@model IList<Webphone.Models.Products>
@using Webphone.Ultilities;

<div class="row featured__filter">
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges">
            <div class="featured__item">
                @foreach (var prs in Model)
                {
                    <div class="featured__item__pic set-bg" data-setbg="@prs.Images">
                        <ul class="featured__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a asp-route="addcart" asp-route-productid="@prs.ProductID"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">@prs.Names</a></h6>
                        <h5>@prs.Price</h5>
                    </div>
                }

            </div>
        </div>
</div>