@using Webphone.Models;
@using Webphone.Ultilities;
@model IList<Blog>

<div class="blog__sidebar__item">
    <h4>Recent News</h4>
    <div class="blog__sidebar__recent">
        @foreach(var item in Model)
        {
            string url = Functions.TitleSlugGeneration("blog", item.Title, item.Blog_Id);
            <a href="/@url" class="blog__sidebar__recent__item">
                <div class="blog__sidebar__recent__item__pic">
                    <img style="height: 70px ;width: 70px" src="@item.Images" alt="">
                </div>
                <div class="blog__sidebar__recent__item__text">
                    <h6 style="display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden" href="/@url">@item.Title</h6>
                    <span>@item.CreateDate</span>
                </div>
            </a>
        }
    </div>
</div>