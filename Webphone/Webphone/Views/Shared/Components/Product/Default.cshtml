@using Webphone.Models;
@using Webphone.Ultilities;
@model IList<Webphone.Models.View_Categories_Products>
@{
    List<Categories> productcategories = ViewBag.productcategories;
}
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        @foreach (var item in productcategories)
                        {
                            <li data-filter="@item.CategoryID">@item.Names</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("Product_D", 0)
    </div>
</section>
<!-- Featured Section End -->