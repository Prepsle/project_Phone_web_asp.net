@model Webphone.Models.Products
@{
    List<Categories> categories = ViewBag.categories;
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/aha.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Chi tiết sản phẩm</h2>
                    <div class="breadcrumb__option">
                        <a href="/home">Home</a>
                        <a href="/">@Html.DisplayFor(model => model.CategoryID)</a>
                        <span>Chi tiết sản phẩm</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="@Html.DisplayFor(model => model.Images)" alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <img data-imgbigurl="img/product/details/product-details-2.jpg"
                             src="img/product/details/thumb-1.jpg" alt="">
                        <img data-imgbigurl="img/product/details/product-details-3.jpg"
                             src="img/product/details/thumb-2.jpg" alt="">
                        <img data-imgbigurl="img/product/details/product-details-5.jpg"
                             src="img/product/details/thumb-3.jpg" alt="">
                        <img data-imgbigurl="img/product/details/product-details-4.jpg"
                             src="img/product/details/thumb-4.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Html.DisplayFor(model => model.Names)</h3>
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div>
                    <div class="product__details__price">$@Html.DisplayFor(model => model.Price)</div>
                   
                    <ul>
                        <li>Cấu hình điện thoại @Html.DisplayFor(model => model.Names)</li>
                        <li><b>Màn hình:</b> <span>@Html.DisplayFor(model => model.Screen)</span></li>
                        <li><b>Hệ điều hành:</b> <span>@Html.DisplayFor(model => model.OS)</span></li>
                        <li><b>Camera sau:</b> <span>@Html.DisplayFor(model => model.Camere_S)</span></li>
                        <li><b>Camera trước:</b> <span>@Html.DisplayFor(model => model.Camera_TRC)</span></li>
                        <li><b>Chip:</b> <span>@Html.DisplayFor(model => model.Chip)</span></li>
                        <li><b>Ram:</b> <span>@Html.DisplayFor(model => model.RAM) GB</span></li>
                        <li><b>Dung lượng lưu trữ:</b> <span>@Html.DisplayFor(model => model.SSD) GB</span></li>
                        <li><b>SIM:</b> <span>@Html.DisplayFor(model => model.SIM)</span></li>
                        <li><b>Pin, Sạc:</b> <span>@Html.DisplayFor(model => model.LIB)</span></li>
                        <li><b>Hãng:</b> <span></span></li>
                    </ul>

                    <hr />

                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                    </div>
                    <a href="#" class="primary-btn">ADD TO CARD</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Đánh giá chi tiết @Html.DisplayFor(model => model.Names)</h6>
                                <p>
                                    @Html.DisplayFor(model => model.Descriptions)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->