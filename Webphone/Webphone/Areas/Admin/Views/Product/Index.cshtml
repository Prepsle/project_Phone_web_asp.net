@model IEnumerable<Webphone.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h2>Danh sách Sản Phẩm</h2>
    </div>

    <p>
        <a type="buton" class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i>
            Thêm sản phẩm
        </a>
    </p>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">STT</th>
                                    <th class="col-3 text-center">Tên sản phẩm</th>
                                    <th class="col-3 text-center">Hình ảnh</th>
                                    <th class="col-1 text-center">Giá gốc</th>
                                    <th class="col-1 text-center">Giá giảm</th>
                                    <th class="col-1 text-center">Phân loại</th>
                                    <th class="col-1 text-center">SP mới nhất</th>
                                    <th class="col-1 text-center">SP bán chạy</th>
                                    <th class="col-1 text-center">SP đánh giá tốt</th>
                                    <th class="col-1 text-center">Ẩn/Hện</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@(i++)</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Names)
                                        </td>
                                        <td class="text-center"><img style="max-width: 150px;height: auto;" src="@item.Images" /></td>
                                        <td>
                                            @item.Price$
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StockQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryID)
                                        </td>
                                        <td>
                                            @item.Latest_Product
                                        </td>
                                        <td>
                                            @item.Top_Rated_Product
                                        </td>
                                        <td>
                                            @item.Review_Product
                                        </td>
                                        <td>
                                            @item.IsActive
                                        </td>

                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit"
                                               asp-route-id="@item.ProductID" class="btn btn-primary btn-sm"
                                               title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete"
                                               asp-route-id="@item.ProductID" class="btn btn-danger btn-sm"
                                               title="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </section>
</main>